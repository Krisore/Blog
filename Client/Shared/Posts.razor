
@using Blog.Shared
@inject Blog.Client.Services.IBlogService BlogService
<h3>BlogPost</h3>

@foreach (var blog in BlogPosts)
{
    <div>
        <div>
            @blog.Title
        </div>
        <div>
            @blog.Description
        </div>
        <div>
            <a href="/posts/@blog.Url"> Read More. </a>
        </div>
    </div>

}


@code {
    private List<BlogPost> BlogPosts { get; set; } = new List<BlogPost>();

    protected override void OnInitialized()
    {
        BlogPosts = BlogService.GetBlogPosts();
    }

}
